
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Article {
  id            Int       @id @default(autoincrement())
  title         String
  slug          String    @unique
  description   String
  content       String    @db.Text
  cover_img     String

  @@map("articles")
}